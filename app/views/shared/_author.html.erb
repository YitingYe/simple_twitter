<div class="col-md-2">
  <div class="img-container">
    <%= image_tag @user.avatar, width: '150px' if @user.avatar? %>
  </div>
  <div class="title"><%= @user.name %></div>
  <div class="introduction"><%= @user.introduction %></div>

  <br />

  <%= link_to tweets_user_path(@user),class: "user-link" do %>
    Tweets <span class="badge"><%= @tweets.count %></span>
  <% end %>

  <%= link_to likes_user_path(@user),class: "user-link" do %>
    Like <span class="badge"><%= @likes.count %></span>
  <% end %>

  <%= link_to followings_user_path(@user),class: "user-link" do %>
    Followings <span class="badge"><%= @followings.count %></span>
  <% end %>

  <%= link_to followers_user_path(@user),class: "user-link" do %>
    Followers <span class="badge"><%= @followers.count %></span>
  <% end %>

  <br />

  <% if @user == current_user %>
    <%= link_to 'Edit Profile', edit_user_path(current_user) , class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Unfollow', followship_path(@user), method: :delete %>
    <%= link_to 'Follow', followships_path(following_id: @user), method: :post %>
  <% end %>

</div>