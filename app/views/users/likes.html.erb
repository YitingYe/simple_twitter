<div class="container">
  <div class="row">  

    <!-- tweet's author -->
    <div class="col-md-2">
      <%= image_tag @user.avatar, width: '150px' if @user.avatar? %>
      <div class="title"><%= @user.name %></div>
      <div class="introduction"><%= @user.introduction %></div>
      <br />

      <%= link_to 'Like',likes_user_path(@user) %>

      <% if @user == current_user %>
        <%= link_to 'Edit Profile', edit_user_path(current_user) , class: "btn btn-primary" %>
      <% else %>
        <%= link_to 'Unfollow', followship_path(@user), method: :delete %>
        <%= link_to 'Follow', followships_path(following_id: @user), method: :post %>
      <% end %>

    </div>

    <!-- tweets -->
    <div class="col-md-10">
      <div class="title">Like</div>
      <% @likes.each do |like| %>
        <div class="tweet-item">
          <div class="user-date">
            <%= like.tweet.user.name %>,
            <%= time_ago_in_words(like.tweet.created_at) %>
          </div>
          <div class="tweet-index">
            <%= like.tweet.description %>
          </div>
          <%= link_to "Reply", tweet_replies_path(like.tweet) %>
        </div>
      <% end %>

     </div>

  </div>
</div>