<div class="container">
  <div class="row">
    <div class="col-md-8">

      <%= form_for @tweet do |f| %>
        <div class= "tweet-area">
          <%= f.text_area :description, {maxlength: 140, class: "form-control", rows: "5",placeholder: "How are you today?"} %>
        </div>
        <%= f.submit 'Tweet', {class: "btn btn-primary pull-right"}%>
      <% end %>


    </div>
  </div>
</div>
      
<br />

<div class="container">
  <div class="row">    

      <% @tweets.each do |tweet| %>
        <div class="col-md-8">
          <div class="tweet-item">
            <div class="user-date">
              <%= tweet.user.name %>,
              <%= time_ago_in_words(tweet.created_at) %>
            </div>
            <div class="tweet-index">
              <%= tweet.description %>
            </div>
            <%= link_to "Reply", tweet_replies_path(tweet) %>

            <%= link_to 'Like', like_tweet_path(tweet), method: :post %>
            <%= link_to 'Unlike', unlike_tweet_path(tweet), method: :post %>
          </div>
        </div>
      <% end %>

  </div>
</div>